<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ConfigEditor.GeneralDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConfigEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,20">
            <PasswordBox Name="apiKey" Header="API Key" Width="250" Margin="0,0,8,0"
                PasswordRevealMode="Hidden" PasswordChanged="KeyChanged" Password="{x:Bind generalSettings.ApiKey}"/>
            <CheckBox Name="revealKey" Content="Show Key" IsChecked="False" Margin="0,25,0,0"
                Checked="ShowKeyChanged" Unchecked="ShowKeyChanged"/>
        </StackPanel>
    
        <RadioButtons Header="Report Type" SelectedIndex="{x:Bind selectedReportType}">
            <RadioButton Content="Console" Checked="ReportChanged"/>
            <RadioButton Content="CSV" Checked="ReportChanged"/>
            <RadioButton Content="Analytics" Checked="ReportChanged"/>
        </RadioButtons>
    </StackPanel>

</Page>
