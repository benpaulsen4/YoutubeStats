<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ConfigEditor.Dialogs.NewChannel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConfigEditor.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Spacing="20">
        <TextBox Name="name" Header="Channel Name" Text="{x:Bind channel.Name, Mode=TwoWay}"/>
        <TextBox Name="id" Header="Channel ID" Text="{x:Bind channel.Id, Mode=TwoWay}"/>
        <ComboBox Name="subGroup" Header="Sub Group" Width="200" ItemsSource="{x:Bind subGroups}" SelectedValue="{x:Bind selectedSubGroup.Value, Mode=TwoWay}"/>
    </StackPanel>
</Page>
